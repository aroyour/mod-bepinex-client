<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <RootNamespace>PolusGG</RootNamespace>
        <LangVersion>9</LangVersion>
        <TargetFramework>netstandard2.1</TargetFramework>
        <Version>2021.4.12.0</Version>
        <AssemblyName>Polusgg</AssemblyName>
<!--        <GameVersion>2021.3.31.3s</GameVersion>-->
        <GameVersion>2021.4.12s</GameVersion>
<!--        <Mappings>2021.4.12s.json</Mappings>-->
        <Mappings>NuclearPowered/Mappings:0.4.0</Mappings>
        <AmongUs>../../../AmongUsModded2021.4.12</AmongUs>
        <Description>Polus.gg official mod</Description>
        <Authors>Sanae6</Authors>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="DokanNet" Version="1.4.0" />
        <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
        <PackageReference Include="Reactor.OxygenFilter.MSBuild" Version="0.3.0" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="bepinexresources" />
      <EmbeddedResource Include="bepinexresources" />
    </ItemGroup>

    <Target Name="Copy" AfterTargets="Reobfuscate">
        <Copy SourceFiles="$(OutputPath)reobfuscated/$(AssemblyName)-$(GameVersion).dll" DestinationFolder="$(AmongUs)/BepInEx/plugins/" />
    </Target>
</Project>