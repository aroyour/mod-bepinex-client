<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <AssemblyName>PolusggSlim</AssemblyName>
        <LangVersion>latest</LangVersion>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="Newtonsoft.Json" Version="13.0.1">
            <PrivateAssets>true</PrivateAssets>
        </PackageReference>
        <PackageReference Include="Reactor.OxygenFilter.MSBuild" Version="0.3.1" />
    </ItemGroup>
    
    <ItemGroup>
      <Folder Include="Patches\RpcPacket" />
      <EmbeddedResource Include="Resources\**" />
    </ItemGroup>

    <Target Name="Copy" AfterTargets="Reobfuscate">
        <Copy SourceFiles="$(OutputPath)reobfuscated/$(AssemblyName)-$(GameVersion).dll" DestinationFolder="$(AmongUs)/BepInEx/plugins/" />
    </Target>
</Project>
